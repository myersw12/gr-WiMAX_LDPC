INCLUDE(FindPkgConfig)
PKG_CHECK_MODULES(PC_WIMAX_LDPC WiMAX_LDPC)

FIND_PATH(
    WIMAX_LDPC_INCLUDE_DIRS
    NAMES WiMAX_LDPC/api.h
    HINTS $ENV{WIMAX_LDPC_DIR}/include
        ${PC_WIMAX_LDPC_INCLUDEDIR}
    PATHS ${CMAKE_INSTALL_PREFIX}/include
          /usr/local/include
          /usr/include
)

